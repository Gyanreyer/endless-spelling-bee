<input webc:root="override" id="guess-input" type="text"
  x-data="{ invalidWordRegex: '' }"
  x-effect="invalidWordRegex = new RegExp(`[^${$store.words?.currentLetterSet || ''}]`, 'g')"
  x-model="$store.words.currentGuess"
  x-on:input="$store.words.currentGuess = $event.target.value.replace(invalidWordRegex, '')"
></input>
<style webc:scoped>
  :host {
    font-size: 2rem;
    text-transform: uppercase;
    text-align: center;

    background: none;
    border: none;
  }
</style>
