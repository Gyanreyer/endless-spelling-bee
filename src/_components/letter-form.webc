<form
  webc:root="override"
  id="letter-form"
  x-on:submit="$event.preventDefault(); $store.words.submitGuess()"
>
  <guess-input name="guess"></guess-input>
  <letter-buttons></letter-buttons>
  <button type="reset">Delete</button>
  <button type="button" x-on:click="$store.words.shuffleOuterLetters()">
    Shuffle
  </button>
  <button type="submit">Enter</button>
</form>
